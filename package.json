{
  "name": "react-material-ui-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for a React app using Material UI",
  "main": "src/index.js",
  "repository": "https://github.com/abilash13/react-material-ui-boilerplate.git",
  "author": "Abilash Menon <abilashmenon95@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-serve config/webpack.config.dev.js",
    "build": "cross-env NODE_ENV=production webpack --mode production --progress --config config/webpack.config.prod.js",
    "lint": "yarn lint:js",
    "lint:js": "yarn lint:eslint .",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --fix",
    "prettify": "prettier --write --ignore-path .gitignore"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-preset-react-optimize": "^1.0.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "connect-history-api-fallback": "^1.5.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.1.0",
    "dotenv-expand": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.0",
    "eslint-plugin-redux-saga": "^0.10.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "koa-connect": "^2.0.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react-dev-utils": "^6.1.1",
    "sw-precache-webpack-plugin": "^0.11.5",
    "thread-loader": "^1.2.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.26.1",
    "webpack-command": "^0.4.2",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-serve": "^2.0.3",
    "webpack-serve-waitpage": "^1.0.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@babel/runtime": "^7.1.5",
    "redux-saga": "^0.16.2",
    "webpack-serve-overlay": "^0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn lint:eslint:fix",
      "yarn prettify",
      "git add"
    ],
    "*.{json,md}": [
      "yarn prettify",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "targets": {
            "browsers": [
              ">0.25%",
              "not ie 11",
              "not op_mini all"
            ]
          },
          "useBuiltIns": "entry"
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-optional-chaining"
    ],
    "env": {
      "production": {
        "presets": [
          "react-optimize"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "plugin:react/recommended",
      "plugin:redux-saga/recommended",
      "plugin:prettier/recommended",
      "prettier/react"
    ],
    "plugins": [
      "redux-saga"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "react/forbid-prop-types": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "config/webpack.config.dev.js"
        }
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
